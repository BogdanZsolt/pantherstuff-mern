extends base

block content
  // BODY
  tr
    td(style='padding: 50px; background-color: #faf0d1; border-radius: 5px')
      table(width='100%' style='border-spacing: 0')
        // Heading
        tr
          td(style='padding: 0; text-align: left')
            h5(style='font-size: 20px; margin: 0') Hi #{firstName},
        // Text 1
        tr
          td(style='padding: 15px 0 20px; text-align: left')
            p(style='font-size: 16px; font-weight: 400; margin: 0')
              | You are receiving this email because you (or someone else)
              | have requested the reset password.
        // Text 2
        tr
          td(style='padding: 15px 0 20px; text-align: left')
            p(style='font-size: 16px; font-weight: 400; margin: 0')
              | Please click the button below, or paste link into your
              | browser to complete the process:
        // Button
        tr
          td(style='padding: 10px 0 0; text-align: center')
            a(href=`${url}` style='text-decoration: none')
              span(style='\
              display: inline-block;\
              color: #faf0d1;\
              background-color: #486629;\
              padding: 10px 50px;\
              border-radius: 5px;\
              ')
                | Reset password
        // Text 3
        tr
          td(style='padding: 25px 0 50px; text-align: left')
            p(style='font-size: 16px; line-height: 28px; margin: 0')
              | If you did not request this, please ignore this email and
              | your password will remain unchanged.
